            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BluetoothLESensorExample1"
            android:documentLaunchMode="intoExisting"
            android:icon="@mipmap/helios_context_launcher"
            android:label="HELIOS BluetoothContext example1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceSensorExample1"
            android:documentLaunchMode="intoExisting"
            android:icon="@mipmap/helios_context_launcher"
            android:label="HELIOS DeviceSensor example1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyContextsExample"
            android:documentLaunchMode="intoExisting"
            android:icon="@mipmap/helios_context_launcher"
            android:label="HELIOS MyContexts example" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyContextsActivity"
            android:documentLaunchMode="intoExisting"
            android:label="MyContexts" >
        </activity>

    </application>
</manifest>
